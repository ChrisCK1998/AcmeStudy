<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_choice_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginLeft="9dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/option"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="9dp"
            android:background="@drawable/circle_unpressed"
            android:tag="single_button"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/option_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:padding="10dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="sans-serif"
            android:tag="single_text"
            android:text="@string/appbar_scrolling_view_behavior"
            android:textSize="15sp" />
    </LinearLayout>
    <!--我超级搞不明白，把relative换成linear，button与text在运行时就没有重叠在一起了？-->


</android.support.v7.widget.CardView>